generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     Int       @id @default(autoincrement()) // Auto-incrementing primary key
  email                  String    @unique // Unique email address
  isVerified             Boolean   @default(false)
  verificationOtp        String?
  verificationOtpExpires DateTime?
  password               String // Password
  resetToken             String? // Token for password reset
  resetTokenExpires      DateTime? // Expiration time for reset token
  createdAt              DateTime  @default(now()) // Timestamp of creation
  updatedAt              DateTime  @updatedAt // Timestamp of last update

  classes Class[] @relation("UserClasses")
}

model Class {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  notes  Note[]   @relation("ClassNotes") // Relation to Note model
  userId Int      // Foreign key to User
  user   User     @relation("UserClasses", fields: [userId], references: [id])
}

model Note {
  id      Int    @id @default(autoincrement())
  title   String
  content String
  classId Int   //Foreign key to Class
  class   Class @relation("ClassNotes", fields: [classId], references: [id])
}
